---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts = (await getCollection("posts", ({ data }) => !data.draft)).sort(
  (a, b) =>
    new Date(b.data.pubDate).valueOf() -
    new Date(a.data.pubDate).valueOf(),
);

const formatter = new Intl.DateTimeFormat("pt-BR", {
  day: "2-digit",
  month: "long",
  year: "numeric",
});

const base = import.meta.env.BASE_URL ?? "/";
const withTrailingSlash = base.endsWith("/") ? base : `${base}/`;
---

<Layout
  title="Monquero Blog"
  description="Estudos, bastidores de projetos e anotacoes de tecnologia."
>
  <section class="blog-hero">
    <header>
      <p class="blog-kicker">Notas & aprendizados</p>
      <h1>Ultimos posts</h1>
      <p class="blog-subtitle">
        Textos escritos em Markdown, publicados automaticamente e com busca
        instantanea.
      </p>
    </header>
  </section>

  <section class="blog-posts">
    <ul>
      {posts.map((post) => (
        <li>
          <a href={`${withTrailingSlash}${post.slug}/`}>
            <div class="post-meta">
              <h2>{post.data.title}</h2>
              <time datetime={post.data.pubDate.toISOString()}>
                {formatter.format(post.data.pubDate)}
              </time>
            </div>
            <p class="post-description">{post.data.description}</p>

            {post.data.tags.length > 0 && (
              <div class="post-tags">
                {post.data.tags.map((tag) => (
                  <span>#{tag}</span>
                ))}
              </div>
            )}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>

<style>
  .blog-hero {
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
    padding: 0 1rem;
    margin-bottom: 2.8rem;
  }

  .blog-hero header {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
  }

  .blog-kicker {
    margin: 0;
    font-size: 1.3rem;
    text-transform: uppercase;
    letter-spacing: 0.4rem;
    color: rgba(0, 255, 238, 0.7);
    font-weight: 600;
  }

  .blog-hero h1 {
    margin: 0;
    font-size: clamp(3.4rem, 4vw, 4.2rem);
    color: var(--text-color);
    text-shadow: 0 0 25px rgba(0, 255, 238, 0.2);
  }

  .blog-subtitle {
    margin: 0;
    max-width: 620px;
    font-size: 1.6rem;
    line-height: 1.7;
    color: var(--muted-text);
  }

  .blog-posts ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: clamp(1.8rem, 2.8vw, 2.6rem);
  }

  .blog-posts li {
    border: 1px solid rgba(0, 255, 238, 0.12);
    border-radius: 22px;
    background: linear-gradient(
      145deg,
      rgba(12, 12, 24, 0.85),
      rgba(12, 12, 24, 0.45)
    );
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
    transition: transform 0.2s ease, border-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .blog-posts li:hover {
    transform: translateY(-4px);
    border-color: rgba(0, 255, 238, 0.4);
    box-shadow: 0 24px 50px rgba(0, 255, 238, 0.12);
  }

  .blog-posts a {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    padding: clamp(2rem, 2vw, 2.8rem);
    color: inherit;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: baseline;
  }

  .post-meta h2 {
    margin: 0;
    font-size: clamp(2rem, 3vw, 2.4rem);
  }

  .post-meta time {
    font-size: 1.3rem;
    color: var(--muted-text);
  }

  .post-description {
    margin: 0;
    color: rgba(226, 232, 240, 0.9);
    line-height: 1.7;
    font-size: 1.5rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.7rem;
  }

  .post-tags span {
    background: rgba(0, 255, 238, 0.12);
    color: var(--main-color);
    padding: 0.45rem 1.1rem;
    border-radius: 999px;
    font-size: 1.2rem;
    letter-spacing: 0.02em;
  }

  @media (max-width: 600px) {
    .blog-hero {
      text-align: left;
    }

    .blog-posts a {
      padding: clamp(1.8rem, 4vw, 2.2rem);
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
