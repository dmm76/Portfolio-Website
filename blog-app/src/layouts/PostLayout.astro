---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";
import GiscusComments from "../components/GiscusComments.astro";

type PostEntry = CollectionEntry<"posts">;
type RenderedPost = Awaited<ReturnType<PostEntry["render"]>>;

interface Props {
  entry: PostEntry;
  Content: RenderedPost["Content"];
  headings: RenderedPost["headings"];
}

const { entry, Content, headings } = Astro.props as Props;

const formatter = new Intl.DateTimeFormat("pt-BR", {
  day: "2-digit",
  month: "long",
  year: "numeric",
});

const updated = entry.data.updatedDate
  ? formatter.format(entry.data.updatedDate)
  : null;

const canonical = Astro.url?.href ?? "";
const ogImage = `/og/${entry.slug}.png`;
---

<Layout
  title={`${entry.data.title} | Monquero Blog`}
  description={entry.data.description}
  canonical={canonical}
  ogImage={ogImage}
>
  <article class="post">
    <header class="post__header">
      <p class="post__meta">
        Publicado em{" "}
        <time datetime={entry.data.pubDate.toISOString()}>
          {formatter.format(entry.data.pubDate)}
        </time>
        {updated && (
          <>
            {" "}
            &bull; Atualizado em{" "}
            <time datetime={entry.data.updatedDate!.toISOString()}>
              {updated}
            </time>
          </>
        )}
      </p>
      <h1>{entry.data.title}</h1>
      <p class="post__description">{entry.data.description}</p>

      {entry.data.tags.length > 0 && (
        <ul class="post__tags">
          {entry.data.tags.map((tag) => (
            <li>#{tag}</li>
          ))}
        </ul>
      )}

      {headings.length > 1 && (
        <nav class="post__toc" aria-label="Indice do post">
          <strong>Indice</strong>
          <ol>
            {headings
              .filter((heading) => heading.depth <= 3)
              .map((heading) => (
                <li style={{ "--depth": heading.depth }}>
                  <a href={`#${heading.slug}`}>{heading.text}</a>
                </li>
              ))}
          </ol>
        </nav>
      )}
    </header>

    <section class="post__content">
      <Content />
    </section>

    <footer class="post__footer">
      <GiscusComments />
    </footer>
  </article>
</Layout>

<style>
  .post {
    width: min(960px, 100%);
    margin: 0 auto;
    padding: clamp(2.4rem, 4vw, 3.8rem);
    display: flex;
    flex-direction: column;
    gap: 2.8rem;
    background: linear-gradient(
      160deg,
      rgba(18, 18, 40, 0.8),
      rgba(10, 10, 24, 0.6)
    );
    border: 1px solid rgba(0, 255, 238, 0.16);
    border-radius: 28px;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.35);
  }

  .post__header {
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
  }

  .post__meta {
    margin: 0;
    font-size: 1.3rem;
    color: var(--muted-text);
    letter-spacing: 0.04em;
  }

  .post__header h1 {
    margin: 0;
    font-size: clamp(3rem, 4.5vw, 3.6rem);
    line-height: 1.1;
    color: var(--text-color);
    text-shadow: 0 0 30px rgba(0, 255, 238, 0.18);
  }

  .post__description {
    margin: 0;
    font-size: 1.6rem;
    line-height: 1.7;
    color: rgba(226, 232, 240, 0.85);
    max-width: 700px;
  }

  .post__tags {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.7rem;
  }

  .post__tags li {
    padding: 0.45rem 1.2rem;
    border-radius: 999px;
    background: rgba(0, 255, 238, 0.12);
    color: var(--main-color);
    font-size: 1.2rem;
    letter-spacing: 0.02em;
  }

  .post__toc {
    margin: 1rem 0 0;
    padding: 1.8rem;
    border-radius: 20px;
    border: 1px solid rgba(0, 255, 238, 0.18);
    background: rgba(8, 8, 20, 0.85);
    box-shadow: inset 0 0 0 1px rgba(0, 255, 238, 0.04);
    display: grid;
    gap: 1rem;
  }

  .post__toc strong {
    font-size: 1.3rem;
    text-transform: uppercase;
    letter-spacing: 0.2rem;
    color: rgba(0, 255, 238, 0.7);
  }

  .post__toc ol {
    margin: 0;
    padding-left: 1rem;
    display: grid;
    gap: 0.6rem;
  }

  .post__toc li {
    font-size: 1.3rem;
    color: rgba(226, 232, 240, 0.8);
    margin-left: calc((var(--depth, 2) - 2) * 0.9rem);
  }

  .post__toc a {
    color: inherit;
    border-bottom: 1px solid transparent;
  }

  .post__toc a:hover,
  .post__toc a:focus-visible {
    border-color: rgba(0, 255, 238, 0.45);
    outline: none;
  }

  .post__content {
    display: grid;
    gap: 1.1rem;
    margin-top: 0;  
    color: rgba(241, 245, 249, 0.94);
    line-height: 1.85;
    font-size: 1.55rem;
  }

  .post__content :global(h2),
  .post__content :global(h3),
  .post__content :global(h4) {
    color: var(--text-color);
  }

  .post__content :global(h2) {
    font-size: clamp(2.2rem, 3.5vw, 2.8rem);
    margin-top: 3rem;
    margin-bottom: 1.2rem;
  }

  .post__content :global(h3) {
    font-size: clamp(1.8rem, 3vw, 2.2rem);
    margin-top: 2.4rem;
    margin-bottom: 1rem;
  }

  .post__content :global(p) {
    margin: 0;
  }

  .post__content :global(a) {
    color: var(--main-color);
  }

  .post__content :global(blockquote) {
    margin: 1.2rem 0;
    padding: 1.2rem 1.6rem;
    border-left: 4px solid rgba(0, 255, 238, 0.6);
    background: rgba(8, 8, 20, 0.75);
    color: rgba(226, 232, 240, 0.8);
    border-radius: 12px;
  }

  .post__content :global(pre) {
    background: rgba(0, 0, 0, 0.85);
    color: #f8fafc;
    padding: 1.5rem;
    border-radius: 18px;
    overflow-x: auto;
    box-shadow: inset 0 0 0 1px rgba(0, 255, 238, 0.1);
  }

  .post__content :global(code) {
    font-family:
      ui-monospace,
      SFMono-Regular,
      Menlo,
      Monaco,
      Consolas,
      "Liberation Mono",
      "Courier New",
      monospace;
    font-size: 1.35rem;
  }

  .post__footer {
    border-top: 1px solid rgba(0, 255, 238, 0.16);
    padding-top: 2.2rem;
  }

  @media (max-width: 720px) {
    .post {
      padding: clamp(1.8rem, 6vw, 2.5rem);
      border-radius: 24px;
    }

    .post__content {
      font-size: 1.35rem;
    }
  }

  @media (max-width: 520px) {
    .post {
      padding: clamp(1.6rem, 7vw, 2.2rem);
      border-radius: 20px;
    }

    .post__header h1 {
      font-size: clamp(2.4rem, 6vw, 2.8rem);
    }

    .post__toc {
      padding: 1.2rem;
    }
  }
</style>
